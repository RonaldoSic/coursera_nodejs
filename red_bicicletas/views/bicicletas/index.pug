extends ../layout
block content
  a(href='/bicicletas/create') Nueva Bicicleta
  br
  br  
  table.table
    tr  
      th #
      th Color
      th Modelo
      th Ubicacion
      th Update
      th Delete

      each bici in todas_las_bicis        
        tr          
          td #{bici.id}
          td #{bici.color}
          td #{bici.modelo}
          td #{bici.ubicacion}
          th 
            a(href="bicicletas/"+bici.id+"/update") Editar
          td 
            form.inline(action="bicicletas/"+bici.id+'/delete' method='post')
              input(type="hidden" name="id" value=bici.id)
              input(type='submit' value='Eliminar')
          